{{<html}}
{{$main}}

<div id="docs">
    <div class="left">
        {{> docs.blocks.categories }}
    </div>
    <div class="center">
        <article>
            {{#page.guide.category}}
            <a href="{{permalink}}">{{title}}</a>
            {{/page.guide.category}}
            
            {{& page.contents}}


            <section>
            <div class="grid grid-2">
            {{^page.guide.prev}}
            <div></div>
            {{/page.guide.prev}}
            {{#page.guide.prev}}
            <div class="prev">
                <h4>&larr; Prev guide</h4>
                <small>{{category.title}}</small>
                <a href="{{permalink}}">{{title}}</a>
            </div>
            {{/page.guide.prev}}
                
            {{^page.guide.next}}
            <div></div>
            {{/page.guide.next}}
            {{#page.guide.next}}
            <div class="next">
                <h4 style="text-align: right;">Next guide &rarr;</h4>
                <small>{{category.title}}</small>
                <a href="{{permalink}}">{{title}}</a>
            </div>
            {{/page.guide.next}}
            </div>
            </section>

        </article>
    </div>
    <div class="right">
        {{> blocks.toc }}
    </div>
</div>
{{/main}}
{{/html}}
